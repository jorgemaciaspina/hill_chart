<div class="p-4">
  <h1 class="mb-4">New Project</h1>

  <%= form_with model: @project, local: true, html: { class: "w-1/2 mx-auto" } do |f| %>
    <% if f.object.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4 mb-4" role="alert">
        <span class="block sm:inline"><%= f.object.errors.full_messages.to_sentence %></span>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :name, "Project Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name,
        class: "p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:outline-gray-400 focus:border-gray-400 focus:ring-gray-400" %>
    </div>

    <div class="flex items-center">
      <%= f.submit "Create Project",
        class: "px-4 py-2 bg-indigo-600 text-white rounded cursor-pointer" %>
      <%= link_to "Cancel", projects_path,
        class: "ml-4 text-gray-600 hover:underline" %>
    </div>
  <% end %>


</div>
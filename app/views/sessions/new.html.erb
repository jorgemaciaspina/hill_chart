<h1>Login</h1>

<%= form_with url: sessions_path, local: true, html: { class: "w-1/2 mx-auto" } do |f| %>
  <div class="mb-4">
    <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :email,
      class: "p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:outline-gray-400 focus:border-gray-400 focus:ring-gray-400" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
    <%= f.password_field :password,
      class: "p-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:outline-gray-400 focus:border-gray-400 focus:ring-gray-400" %>
  </div>

  <div class="flex justify-end">
    <%= f.submit "Login", class: "px-3 py-2 bg-green-500 text-white rounded" %>
  </div>
<% end %>
